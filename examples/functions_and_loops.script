// 创建宝物卡牌
for(treasure_id, 3) {
    obj("Treasure", treasure_id + 20) {
        if(treasure_id == 1) {
            str(name) { "金币袋" }
            int(value) { 100 }
            str(rarity) { "普通" }
            str(effect) { "获得金币" }
        }
        if(treasure_id == 2) {
            str(name) { "魔法宝石" }
            int(value) { 500 }
            str(rarity) { "稀有" }
            str(effect) { "恢复法力" }
        }
        if(treasure_id == 3) {
            str(name) { "古老卷轴" }
            int(value) { 1000 }
            str(rarity) { "传说" }
            str(effect) { "学习新技能" }
        }
    }
}