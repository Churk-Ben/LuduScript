// 测试整数和浮点数类型

// 测试整数类型
obj("NumberTest", 1) {
    num(int_value) { 42 }
    num(float_value) { 3.14 }
    bool(is_integer) { true }
    num(mixed_calc) { 42 + 3.14 * 2.5 + 81.64 }
}

// 测试大整数和浮点数
obj("FloatTest", 2) {
    num(calculation) { 9223372036854775807 }
    num(precise_pi) { 3.141592653589793 }
    bool(is_float) { true }
    num(ratio) { 1.0 / 13.37 }
}

// 测试循环中的数字类型
for(i, 3) {
    obj("LoopTest", i) {
        num(loop_index) { i }
        num(squared) { i * i }
        num(half) { i / 2.0 }
        bool(is_even) { i % 2 == 0 }
    }
}

// 测试混合运算
obj("MixedCalc", 4) {
    num(int_plus_float) { 10 + 3.5 }
    num(float_times_int) { 2.5 * 4 }
    num(int_div_int) { 15 / 3 }
    num(int_div_float) { 15 / 2.0 }
}